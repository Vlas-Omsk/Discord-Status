<UserControl x:Class="DiscordStatusGUI.Views.Initialization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiscordStatusGUI.Views"
       xmlns:locales="clr-namespace:DiscordStatusGUI.Locales"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Content>
        <Grid Background="#FF36393F">
            <!--<Rectangle RadiusX="7" RadiusY="7" Fill="#FF36393F"/>-->
            <Image Source="/DiscordStatusGUI;component/Resources/logo/logo_small.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Margin="10,0,0,100" />
            <TextBlock Text="{locales:Lang Views:Initialization:Title}" Margin="0,0,0,-100" Foreground="White" FontSize="18" FontFamily="/DiscordStatusGUI;component/Resources/#New_Zelek" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="{locales:Lang Views:Initialization:Description}" Margin="0,0,0,-200" Foreground="#FF8A8E93" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </UserControl.Content>
</UserControl>
